<h1>User一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th><%= t 'activerecord.attributes.user.name' %></th>
      <th><%= t 'activerecord.attributes.user.email' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '詳細', admin_user_path(user), class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

