<h1>Userの詳細</h1>

<div class="row">
  <div class="col-md-4">
    <h3>User名</h3>
    <%= @user.name %>
    <h3>自己紹介</h3>

    <% if @user.body.present? %>
      <p><%= simple_format @user.body %></p>
    <% else %>
      <p>自己紹介はありません</p>
    <% end %>
    
    <% if current_user && current_user == @user %>
      <%= link_to "自己紹介を編集", edit_user_path(@user), class: "btn btn-warning" %>
    <% end %>
  </div>
  <div class="col-md-8">
    <%= render 'public/groups/groups', groups: @user.groups %>
  </div>
</div>

